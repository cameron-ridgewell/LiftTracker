<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".elements.ExerciseSearchFragmentAdapter">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Main text"
            android:id="@+id/exercise_name"
            style="@style/exercise_list_title_text"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/exercise_name"
            android:id="@+id/exercise_name_alt_text"
            android:text="Alt text"
            android:paddingLeft="10dp"
            android:textStyle="italic"
            style="@style/set_info_list_text"/>
    </LinearLayout>

</FrameLayout>
